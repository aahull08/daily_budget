<!doctype html>
<html lang="en-US">
  <head>
    <title>Daily Budget</title>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/whitespace-reset.css">
    <link rel="stylesheet" href="/stylesheets/main.css">
  </head>
  <body>
    <header>
      <h1><a href="/daily_budget" style="text-decoration: none; color: green;">Daily Budget</a></h1>
    </header>
    <nav>
      <ul>
        <li><a href="/set_up">Set Up</a></li>
        <li><a href="/new_expense">New Expense</a></li>
        <li><a href="/settings">Daily Budget</a></li>
      </ul>
    </nav>
    <div class='flash'>
      <% if session[:success] %>
        <div class="flash success">
          <p><%= session.delete(:success) %></p>
        </div>
      <% end %>
      <% if session[:error] %>
        <div class="flash error">
          <p><%= session.delete(:error) %></p>
        </div>
      <% end %>
    </div>
    <main>
      <%== yield %>
    </main>
  </body>
</html>
